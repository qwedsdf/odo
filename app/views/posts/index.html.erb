            <% end %>
        </dev>
        <% @posts.each do |post| %>
            <% if (post.tag == @type || @type == Post.tags.keys[0])&&(post.content.include?("#{@search_word}"))%>
                <li>
                    <img class="icon-image" src="<%= "/images/#{post.user.icon_image}" %>"><%= link_to(post.content,"/posts/#{post.id}/show") %>
                    <img class="icon-image" src="<%= "/images/tweet_images/#{post.image_1}" %>">
                    <img class="icon-image" src="<%= "/images/tweet_images/#{post.image_2}" %>">
                    <img class="icon-image" src="<%= "/images/tweet_images/#{post.image_3}" %>">
                    <img class="icon-image" src="<%= "/images/tweet_images/#{post.image_4}" %>">
                    <%= link_to(post.user.name, "/users/#{post.user.id}/show") %>
                    <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
                        <%= link_to("/likes/#{post.id}/#{@type}/destroy",{method: "post"}) do %>
                            <span class="far fa-heart btn-like"></span>
                        <% end %>
                    <% else %>
                        <%= link_to("/likes/#{post.id}/#{@type}/create",{method: "post"}) do %>
                            <span class="far fa-heart btn-unlike"></span>
                        <% end %>
                    <% end %>
                </li>
            <% end %>
        <% end %>
        </ul>
    </div>
</div>

<script>
    $(function(){
        $("#type-select").change(function(){
            $("#refresh").submit();
        });
    });
</script>